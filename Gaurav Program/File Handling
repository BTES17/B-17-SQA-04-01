package Mypackage;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.FileOutputStream;
public class File_Reader_Writer {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
try{
	File file = new File("D:\\Gaurav.txt");
	File file1 = new File("D:\\Gaurav.jpeg");
	FileOutputStream fout = new FileOutputStream("D:/Hello.txt");
	String s = "I am in java";
	byte b[]=s.getBytes();//converting string into byte array 
	fout.write(b);
	fout.close();
	file1.createNewFile();
	int i = 0;
	FileWriter write = new FileWriter(file);
	write.write("I am in java8");/*Unlike FileOutputStream class, you don't need to convert string into byte array 
	because it provides method to write string directly.*/
	write.close();
	FileReader read = new FileReader(file);
	while((i=read.read())!=-1)
	System.out.println((char)i);
	
}
catch(Exception e)
{
	System.out.println("Success");
}
	}

}

******BYTE Streaming*******
import java.io.FileInputStream;
import java.io.*;

public class File_Handling_Byte_Streaming {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
//File file  =  new File(D:\\today.txt);
File file = new File("D:/todays.txt");
try
{
	int i = 0;
	file.createNewFile();
	FileOutputStream write = new FileOutputStream(file);
	FileInputStream read = new FileInputStream(file);
	byte a[] = {65,32,59,36};
	write.write(a);
	
 while((i=read.read()) !=-1)
 {
 System.out.println("Ascii value of " +i+ " is '" +(char)i+ "'.");
 }
    write.close();
}
catch(Exception e)
{
	System.out.println(e);
}
	}

}

*****ByteArrayInput/Output Stream*****
package Mypackage;

import java.io.ByteArrayInputStream;
import java.io.ByteArrayOutputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.util.Scanner;

public class File_Byte_Array_Output_Input_Stream 
{
	public static void main(String[] args) 
		{
		// TODO Auto-generated method stub
			File file = new File("D:\\Gaurav.txt");
			File filetwo = new File("D:\\Dang.txt");
			int Number,l;			
			Scanner in = new Scanner(System.in);
			System.out.println("Enter number of integer: ");
			Number = in.nextInt();
			System.out.println("Enter " +Number+ " number of integer below:");
			System.out.println("===============================");
			byte array[] = new byte[Number];
			for(l = 0; l < Number; l++)
			{
				array[l] = in.nextByte();
			}
			try
				{
					FileOutputStream obj1 = new FileOutputStream(file);
					FileOutputStream obj2 = new FileOutputStream(filetwo);
					//FileInputStream read = new FileInputStream(file);
					ByteArrayOutputStream write = new ByteArrayOutputStream();
					write.write(array);
					write.writeTo(obj1);
					write.writeTo(obj2);	
					write.close();
					ByteArrayInputStream read = new ByteArrayInputStream(array);
					int i = 0, j=1;
					while((i=read.read())!=-1 && j<=Number)
						{
					
							System.out.println(j+ ". Ascii value of character '" +i+ "' is '" +(char)i+ "'." );
						j++;
						}
					read.close();
					System.out.println("Success");
				}
			catch(Exception e)
				{
					System.out.println(e);
				}
		}

}
