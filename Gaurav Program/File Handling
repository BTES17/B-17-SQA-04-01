package Mypackage;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.FileOutputStream;
public class File_Reader_Writer {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
try{
	File file = new File("D:\\Gaurav.txt");
	File file1 = new File("D:\\Gaurav.jpeg");
	FileOutputStream fout = new FileOutputStream("D:/Hello.txt");
	String s = "I am in java";
	byte b[]=s.getBytes();//converting string into byte array 
	fout.write(b);
	fout.close();
	file1.createNewFile();
	int i = 0;
	FileWriter write = new FileWriter(file);
	write.write("I am in java8");/*Unlike FileOutputStream class, you don't need to convert string into byte array 
	because it provides method to write string directly.*/
	write.close();
	FileReader read = new FileReader(file);
	while((i=read.read())!=-1)
	System.out.println((char)i);
	
}
catch(Exception e)
{
	System.out.println("Success");
}
	}

}

******BYTE Streaming*******
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
public class File_Handling {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
File file = new File("D:/Hello.txt");
File file1 = new File("D:/Hello1.jpeg");
int i = 0;
try{
	file1.createNewFile();
FileWriter write = new FileWriter(file);
write.write("45");
write.close();
FileReader read = new FileReader(file);
while((i= read.read())!=-1)
System.out.println((char)i);
}
catch(Exception e)
	{	
	}
}

}

